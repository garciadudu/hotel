@model ConstructoIT.Hotel.Accor.Site.Models.MoradorViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Morador</h1>

<button class="btn btn-success" id="botaoCadastrar" name="botaoCadastrar" data-toggle="modal" data-target="#cadastrar">Cadastrar</button>

<table class="tabela">
    <tr>
        <td></td>
    </tr>
</table>


<div class="modal fade" id="cadastrar" tabindex="-1" role="dialog" aria-labelledby="exemploModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exemploModalLabel">Cadastrar</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" action="/Cadastrar">
                    <input type="hidden" id="Id" value="0" />
                    <div class="form-group">
                        <label for="nome" class="col-form-label">Nome</label>
                        <input type="text" class="form-control cadastrarNome" id="nome">
                    </div>
                    <div class="form-group">
                        <label for="Id_Familia" class="col-form-label">Familia</label>
                        <select id="Id_Familia" asp-for="Id_Familia" asp-items="@(new SelectList(ViewBag.Familias, "Value", "Text"))">
                            <option value="" disabled selected>Selecione uma familia</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="quantidadeBichosEstimacao" class="col-form-label">Qtd. Bichos:</label>
                        <input type="text" class="form-control cadastrarQuantidadeBichosEstimacao" id="quantidadeBichosEstimacao">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary btn-Cadastrar">Salvar Dados</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="editar" tabindex="-1" role="dialog" aria-labelledby="exemploModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exemploModalLabel">Editar</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="put" action="/Atualizar">
                    <input type="hidden" id="Id" />
                    <div class="form-group">
                        <label for="nome" class="col-form-label">Nome</label>
                        <input type="text" class="form-control editarNome" id="nome">
                    </div>

                    <div class="form-group">
                        <input type="hidden" id="Id_Familia" value="0" />
                        <label for="condomino" class="col-form-label">Familia</label>
                        <input type="text" class="form-control editarFamilia" id="familia">
                    </div>

                    <div class="form-group">
                        <label for="quantidadeBichosEstimacao" class="col-form-label">Qtd. Bichos:</label>
                        <input type="text" class="form-control editarQuantidadeBichosEstimacao" id="quantidadeBichosEstimacao">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary btn-Editar">Salvar Dados</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="excluir" tabindex="-1" role="dialog" aria-labelledby="exemploModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exemploModalLabel">Exclusão</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="delete" action="/Remover">
                    <input type="hidden" id="Id" />
                    <div class="form-group">
                        <label for="nome" class="col-form-label">Nome</label>
                        <input type="text" class="form-control excluirNome" id="nome">
                    </div>
                    <div class="form-group">
                        <input type="hidden" id="Id_Familia" value="0" />
                        <label for="condomino" class="col-form-label">Familia</label>
                        <input type="text" class="form-control excluirFamilia" id="familia">
                    </div>

                    <div class="form-group">
                        <label for="quantidadeBichosEstimacao" class="col-form-label">Qtd. Bichos:</label>
                        <input type="text" class="form-control excluirQuantidadeBichosEstimacao" id="quantidadeBichosEstimacao">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary btn-Excluir">Confirma a exclusão?</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script src="~/js/View/Morador/Morador.js"></script>

    <script type="text/javascript">
        $(function () {
            moradorScript.init();
        })
    </script>
}